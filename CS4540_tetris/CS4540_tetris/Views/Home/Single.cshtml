@{
    ViewData["Title"] = "Single Player";
}

<script src="~/lib/pixi/pixi.min.js"></script>
<!DOCTYPE html>
<html>

    <!--Head of document-->
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Single Player" />
        <meta name="keywords" content="HTML, CSS" />
        <meta name="author" content="Tetrominoes" />
        <!--Used to change with size of device-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>High Scores</title>
    </head>
    <!--body of document-->
    <body>
        <div class="text-center">
            <!--Welcome text-->
            <!--Jumbo tron from https://getbootstrap.com/docs/4.0/components/jumbotron/ -->
