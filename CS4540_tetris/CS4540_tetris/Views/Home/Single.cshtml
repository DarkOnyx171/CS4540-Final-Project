                <div class="container">
                    <h1 class="display-4">Single Player Tetro</h1>
                </div>
            </div>
            <!--Game area for single player game-->
            <p class="game_area">
                <div id="start">
                    <button onclick="oneplayergame();">Start</button>
                    <!--<button onclick="twoplayergame();">Start 2 player</button>-->
                </div>
                <canvas id="game" width="200" height="400"></canvas>
                <div id="scorecontainer">
                    Score:
                <p id="score">0</p>
                </div>
                <script src="~/js/tetris.js"></script>
            </p>
        </div>
    </body>
</html>
