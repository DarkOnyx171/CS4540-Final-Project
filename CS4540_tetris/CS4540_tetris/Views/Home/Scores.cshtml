@using Microsoft.AspNetCore.Identity

@model IEnumerable<CS4540_tetris.Models.Score>

@{
    ViewData["Title"] = "High Scores";
}
        <!DOCTYPE html>



        <html>

        <!--Head of document-->
        <head>
            <meta charset="UTF-8" />
            <meta name="description" content="The High Scores of the Tetro Games" />
            <meta name="keywords" content="HTML, CSS" />
            <meta name="author" content="Jaecee Naylor" />
            <!--Used to change with size of device-->
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <title>High Scores</title>
        </head>

        <!--Page info-->
        <body>
            <!--Welcome text-->
            <!--Jumbo tron from https://getbootstrap.com/docs/4.0/components/jumbotron/ -->
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">High Scores</h1>
                </div>
            </div>

            <!--Table in bootstrap with alterations from https://getbootstrap.com/docs/4.0/content/tables/ -->
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col" width="25%">
                            @Html.DisplayNameFor(model => model.Nickname)
                        </th>
                        <th scope="col" width="40%">
                            @Html.DisplayNameFor(model => model.Value)
                        </th>
                        <th scope="col" width="35%">
                            @Html.DisplayNameFor(model => model.GameMode)
                        </th>
                    </tr>

                </thead>
                <tbody>
                    <!--For each score display it in order-->
                    @foreach (var item in Model)
                    {
                        //displaying all the high scores
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nickname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GameMode)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </body>
    </html>

